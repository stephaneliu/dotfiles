zshrc="$HOME/.zshrc"

if [ -L $zshrc ]; then
  echo "+++ rcm installed correctly."

  echo "*** home dir"
  ls -alh ~/
  echo "*** zshrc contents"
  cat ~/.zshrc
else
  echo "*** rcm did not install dotfiles correctly"
  echo "*** $HOME"
  ls -alh ~/
  echo "Current dir $PWD"
  echo "Create a hello file in home"
  echo "Hello world" > $HOME/hello.txt
  echo "File seen?"
  echo "Hello world2 to ~" > ~/hello2.txt
  echo "Hello world2 to ~ seen?"
  ls -alh ~/
  exit 1
fi

